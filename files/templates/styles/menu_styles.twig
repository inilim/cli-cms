.main-menu {
    background-color: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
    padding: 0.5rem 0;
}

.menu-list {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    gap: 1rem;
}

.menu-item {
    margin: 0;
}

.menu-link {
    text-decoration: none;
    color: #007bff;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    transition: background-color 0.2s;
}

.menu-link:hover {
    background-color: #e9ecef;
}